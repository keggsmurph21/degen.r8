<!DOCTYPE html>
<html>
    <head>
        <title>degen.r8 &ndash; login</title>
        <link rel="stylesheet" href="/assets/css/login.css">
        <link rel="icon" href="/assets/images/favicon.ico">
    </head>
    <body>
    <%- include("Components/banner", {user: null}) %>
    <div id="content">
        <div id="login-container" class="sign-in">
            <h2 id="title">
                log in
            </h2>
            <div id="flash-messages">
                <% messages.error && messages.error.forEach(message => { %>
                <div class="flash-message">
                    <%= message %>
                </div>
                <% }); %>
            </div>
            <form action="/login.rest" method="post">
                <div id="username-container">
                    <label class="hidden" for="username">username</label>
                    <input id="username" name="name" type="text" required placeholder="username">
                </div>
                <div id="password-container">
                    <label class="hidden" for="password">password</label>
                    <input id="password" name="password" type="password" required placeholder="password">
                </div>
                <div class="submit-container">
                    <input type="submit" value="log in">
                </div>
            </form>
        </div>
    </div>
    </body>
</html>
