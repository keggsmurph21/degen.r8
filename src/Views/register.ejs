<!DOCTYPE html>
<html>
    <head>
        <title>degen.r8 &ndash; register</title>
    </head>
    <body>
    <%- include("Components/banner", {path: "register", user: null}) %>
    <div id="content">
        <div id="register-container">
            <div>
                register for an account
            </div>
            <div id="flash-messages">
                <% messages.error && messages.error.forEach(message => { %>
                <div class="flash-message">
                    <%= message %>
                </div>
                <% }); %>
            </div>
            <form action="/register.rest" method="post">
                <div id="username-container">
                    <label for="username">username</label>
                    <input id="username" name="name" type="text" required>
                </div>
                <div id="password-container">
                    <label for="password">password</label>
                    <input id="password" name="password" type="password" required>
                </div>
                <div class="submit-container">
                    <input type="submit" value="register">
                </div>
            </form>
        </div>
    </div>
    </body>
</html>
